{
  "manifest_version": 2,
  "name": "Manga Notifier",
  "description": "Recieve update on new release of yours favarite manga !",
  "version": "0.0.1",
  "icons": {
      "16": "icon/16.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
  },
  "browser_action": {
    "default_icon":"icon/128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/jquery.js", "js/background.js"]
  },
  "permissions": [
    "tabs",
    "storage",
    "history",
    "http://*/",
    "https://*/"
  ]
}
